def sub_mat(a, b):
    mat_sub = []
    for r in range(len(a)):
        mat_sub_row = []
        for c in range(len(a[r])):
            a_sub_b = a[r][c] - b[r][c]
            mat_sub_row.append(a_sub_b)
        mat_sub.append(mat_sub_row)
    return (mat_sub)   
    
