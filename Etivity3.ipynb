def add_mat(a, b):
    mat_sum = []
    for r in range(len(a)):
        mat_sum_row = []
        for c in range(len(a[r])):
            a_sum_b = a[r][c] + b[r][c]
            mat_sum_row.append(a_sum_b)
        mat_sum.append(mat_sum_row)
    return (mat_sum)   
    
